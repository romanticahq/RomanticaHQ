# Backend core
SPRING_DATASOURCE_URL=jdbc:postgresql://db:5432/romanticahq
SPRING_DATASOURCE_USERNAME=romantica
SPRING_DATASOURCE_PASSWORD=replace-me
SPRING_JPA_HIBERNATE_DDL_AUTO=validate

# JWT/session security
JWT_SECRET=replace-with-long-random-secret-at-least-32-characters
JWT_EXPIRY_SECONDS=604800
JWT_COOKIE_NAME=RHQ_AUTH
JWT_COOKIE_SECURE=true
JWT_COOKIE_SAMESITE=Strict

# Allowed frontend origins
CORS_ALLOWED_ORIGINS=https://romanticahq.com

# Public app URL used in email links
PUBLIC_BASE_URL=https://romanticahq.com

# SMTP email delivery
EMAIL_ENABLED=true
EMAIL_FROM=no-reply@romanticahq.com
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=replace-me
MAIL_PASSWORD=replace-me
MAIL_SMTP_AUTH=true
MAIL_SMTP_STARTTLS_ENABLE=true

# Realtime Redis fanout (for multi-instance deployments)
REALTIME_REDIS_ENABLED=true
REALTIME_REDIS_CHANNEL=rhq:chat:messages
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
